conf_data = configuration_data()
conf_data.set('VERSION_STR', meson.project_version())
conf_data.set_quoted('CONFIG_DIR', get_option('prefix') / get_option('sysconfdir') / 'wonder')
conf_data.set_quoted('DATA_DIR', get_option('prefix') / get_option('datadir') / 'wonder')
configure_file(output: 'config.h',
               configuration: conf_data)
# This configuration file is generated by Meson and saved in the build directory in the same folder as in our repo structure.
# We do not need to install it, since we do not build a shared library.
message('conf_data for autogenerated config.h:\n' + 'VERSION_STR: ' + conf_data.get('VERSION_STR') + '\nCONFIG_DIR: ' + conf_data.get('CONFIG_DIR') + '\nDATA_DIR: ' + conf_data.get('DATA_DIR'))
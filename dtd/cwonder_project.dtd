<!ELEMENT cwonder_project (scenario,snapshot*)>
<!ATTLIST cwonder_project
  name          CDATA   #REQUIRED
>

<!ELEMENT scenario (source|group)* >

<!ELEMENT snapshot (source|group)* >
<!ATTLIST snapshot
  id       CDATA  #REQUIRED
  name	   CDATA  #REQUIRED
>

<!ELEMENT source EMPTY>
<!ATTLIST source
  id          CDATA  #REQUIRED
  name        CDATA  #REQUIRED
  type        CDATA  #REQUIRED
  posx        CDATA  #REQUIRED
  posy        CDATA  #REQUIRED
  posz	      CDATA  #IMPLIED
  angle	      CDATA  #REQUIRED
  colorR      CDATA  #IMPLIED
  colorG      CDATA  #IMPLIED
  colorB      CDATA  #IMPLIED
  groupId     CDATA  #IMPLIED
  invRotation CDATA  #IMPLIED
  invScaling  CDATA  #IMPLIED
  doppler     CDATA  #IMPLIED
>

<!ELEMENT group EMPTY>
<!ATTLIST group
  id       CDATA  #REQUIRED
  posx     CDATA  #REQUIRED
  posy     CDATA  #REQUIRED
  colorR   CDATA  #IMPLIED
  colorG   CDATA  #IMPLIED
  colorB   CDATA  #IMPLIED
>
